      tblEmployee.id f1,
      tblEmployee.DepartmentCode f2,
      tblEmployee.EmpNumber f3,
      tblEmployee.EmpFullName f4,
      tblEmployee.EmpFullNamePYM f5,
      tblEmployee.TitleID f6,
      tblDepartment.DeptFullName f7,
      tblDepartment.DeptFullNamePYM f8
