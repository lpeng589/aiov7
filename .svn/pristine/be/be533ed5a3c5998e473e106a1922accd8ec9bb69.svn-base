.CRselectBox {
	background:url(../images/select_box_off.gif) no-repeat right bottom;
	cursor:pointer;
	margin-left:1px;
	width:75px;
	height:23px;
}
.CRselectBoxHover {
	background:url(../images/select_box_on.gif) no-repeat right bottom;
}
.CRselectBox .CRselectValue {
	display:block;
	margin:1px 1px 2px;
	padding:1px 18px 2px 6px;
	vertical-align:middle;
	white-space:nowrap;	
	overflow:hidden;
}
.CRselectBoxOptions {
	background:#99CCFF ;
	list-style:none;
	overflow-y:hidden;
	z-index:1000;
	position: relative;
	top:-9px;
	width:80px;
	display:none;
	padding:2px;
}
.CRselectBoxItem {
	color:#000;
	background:#fff;	
	padding:0px;
	margin:0px;
	padding-left:10px;
}
.CRselectBoxOptions a{
	color:#000;
	display:block;
	height:22px;
	line-height:22px;
	background:#fff;	
	overflow:hidden;
	white-space:nowrap;
	text-align:left;
}
.CRselectBoxOptions a:hover{
	background:#CCFFCC;
}
.CRselectBoxOptions .selected{
	background:#99FFFF
}

.CRselectBox a { 
	outline: none; 
	text-decoration:none;
}
.CRselectBox a:focus { 
	outline: none; 
	text-decoration:none;
} 